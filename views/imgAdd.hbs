     <script>
    document.getElementById('contactForm').addEventListener('submit', function(e) {
    e.preventDefault();
    const formData = new FormData(this);

    fetch('/images', {
        method: 'POST',
        body: formData
    })
    .then(response => response.text())
    .then(ok => {
        if (ok === 'success') {
          Swal.fire({
            title: "¡Agregado!",
            text: "Imagen agregada correctamente",
            icon: "success",
            showCancelButton: false,
            showConfirmButton: false
            });

            setTimeout(function() {
            window.location.href = '/images';//redireciona al index.hbs
            }, 2000);

        }else if(ok === 'vacio'){
            Swal.fire({
            title: "¡Error!",
            text: "Llene todos los campos",
            icon: "info"
            });
        }
    })
    .catch(error => {
        console.error(error); 
    });
});
    </script>


