    </head>
    <body class="bg-primary" style="
    background-image: url('/img/bg2.jpg');
    background-size: cover; 
    background-position: center;">

        <div id="layoutAuthentication">
            <div id="layoutAuthentication_content">
                <main>
                    <div class="container">
                        <div class="row justify-content-center">
                            <div class="col-lg-5">
                                <div class="card shadow-lg border-0 rounded-lg mt-5">
                                    <div class="card-header row"><h3 class="text-center font-weight-light my-4">Sesión admin</h3></div>
                                    <div class="card-body">
                                        {{!-- form Login sesión --}}

                                        <form id="form">

                                        <form action="/login" method="POST">

                                            <div class="form-floating mb-3">
                                                <input class="form-control" name="nombre" id="nombre" type="text" />
                                                <label for="nombre">Cedula</label>
                                            </div>
                                            <div class="form-floating mb-3">
                                                <input class="form-control" name="pass" id="pass" type="password" />
                                                <label for="pass">Contraseña</label>
                                            </div>
                                            <div class="d-flex align-items-center justify-content-between mt-4 mb-0">
                                                <a class="small text-danger" href="password.html">Olvidaste tu contraseña?</a>
                                                <button type="submit" class="btn btn-primary">iniciar sesión</button>
                                            </div>
                                        </form>
                                        {{!--  --}}
                                    </div>
                                    <div class="card-footer text-center py-3">
                                        <div class="small "><a class="" href="register.html">Necesitas una cuenta? Registrate!</a></div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </main>
            </div>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.3/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
        <script src="js/app.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>

    <script>
         document.getElementById('form').addEventListener('submit', function(e) {
    e.preventDefault();
    const formData = new FormData(this);

    fetch('/login', {
        method: 'POST',
        body: JSON.stringify(Object.fromEntries(formData.entries())),
        headers: {
            'Content-Type': 'application/json'
        }
    })
    .then(response => response.text())
    .then(ok => {
        if (ok === 'success') {
          Swal.fire({
            title: "¡Correcto!",
            text: "Iniciaste sesiòn en modo de administrador",
            icon: "success",
            showCancelButton: false,
            showConfirmButton: false
            });

            setTimeout(function() {
            window.location.href = '/';//redireciona al index.hbs
            }, 2000);

        } else if(ok === 'err'){
            Swal.fire({
            title: "¡Error!",
            text: "Usuario o contraseña incorrecto",
            icon: "error"
            });                                           
        }else if(ok === 'vacio'){
            Swal.fire({
            title: "¡Error!",
            text: "Llene todos los campos",
            icon: "info"
            });
        }
    })
    .catch(error => {
        console.error(error); 
    });
});
    </script>

